<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Контакты" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="426dp"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/addressTextView"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:fontFamily="serif"
                    android:text="@string/address"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textAppearance="@android:style/TextAppearance.Material.Small"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:typeface="serif"
                    android:visibility="visible"
                    tools:ignore="NewApi" />

                <TextView
                    android:id="@+id/prepTextView"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/addressTextView"
                    android:layout_below="@+id/addressTextView"
                    android:layout_marginTop="38dp"
                    android:fontFamily="serif"
                    android:text="@string/prep"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/phonePrepTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/prepTextView"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="serif"
                    android:text="@string/prep_phone"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/priemTextView"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/prepTextView"
                    android:layout_below="@+id/phonePrepTextView"
                    android:layout_marginTop="35dp"
                    android:fontFamily="serif"
                    android:text="@string/priem"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/phonePriemTextView"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/priemTextView"
                    android:layout_below="@+id/priemTextView"
                    android:fontFamily="serif"
                    android:text="@string/priem_phone"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/worktimeTextView"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/phonePriemTextView"
                    android:layout_below="@+id/phonePriemTextView"
                    android:fontFamily="serif"
                    android:text="@string/worktime"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/postTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/worktimeTextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="42dp"
                    android:fontFamily="serif"
                    android:text="@string/post"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:typeface="serif"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/postTextView"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="serif"
                    android:text="@string/email"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:typeface="serif"
                    android:visibility="visible" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
